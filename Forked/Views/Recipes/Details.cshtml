@model Forked.Models.ViewModels.Recipes.RecipeDetailViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="my-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">@Model.Title</h1>

            <!-- Recipe Meta Info -->
            <div class="d-flex align-items-center text-muted mb-3">
                <span class="me-3">
                    <i class="bi bi-person"></i> By @Model.AuthorName
                </span>
                <span class="me-3">
                    <i class="bi bi-clock"></i> @Model.TotalTimeInMinutes min
                </span>
                <span class="me-3">
                    <i class="bi bi-star-fill text-warning"></i> @Model.AverageRating.ToString("F1") (@Model.ReviewCount reviews)
                </span>
                <span>
                    <i class="bi bi-people"></i> @Model.Servings servings
                </span>
            </div>

            <!-- Action Buttons -->
            <div class="mb-3">
                <a asp-action="Fork" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-diagram-3"></i> Fork Recipe
                </a>
                
                @if (Model.IsAuthor || User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this recipe?')">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                }

                @if (Model.IsFavourite)
                {
                    <form asp-action="UnfavoriteRecipe" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-heart-fill"></i> Unfavorite
                        </button>
                    </form>
                }
                else
                {
                    <form asp-action="FavoriteRecipe" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-heart"></i> Favorite
                        </button>
                    </form>
                }
            </div>

            <!-- Fork Info -->
            @if (Model.IsForked)
            {
                <div class="alert alert-info">
                    <i class="bi bi-diagram-3"></i>
                    Forked from <strong>@Model.ParentRecipeTitle</strong> by @Model.ParentRecipeAuthorName
                </div>
            }
            @if (Model.ForkCount > 0)
            {
                <div class="alert alert-secondary">
                    <i class="bi bi-diagram-3"></i>
                    This recipe has been forked @Model.ForkCount time@(Model.ForkCount > 1 ? "s" : "")
                </div>
            }
        </div>
    </div>

    <!-- Images -->
    @if (Model.ImagePaths.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div id="recipeCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.ImagePaths.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.ImagePaths[i]" class="d-block w-100" alt="Recipe image" style="max-height: 500px; object-fit: cover;">
                            </div>
                        }
                    </div>
                    @if (Model.ImagePaths.Count > 1)
                    {
                        <button class="carousel-control-prev" type="button" data-bs-target="#recipeCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#recipeCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Description -->
    <div class="row mb-4">
        <div class="col-12">
            <h3>Description</h3>
            <p class="lead">@Model.Description</p>
        </div>
    </div>

    <!-- Time Info -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Prep Time</h5>
                    <p class="card-text display-6">@(Model.PreparationTimeInMinutes ?? 0) min</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Cook Time</h5>
                    <p class="card-text display-6">@(Model.CookingTimeInMinutes ?? 0) min</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Time</h5>
                    <p class="card-text display-6">@Model.TotalTimeInMinutes min</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Ingredients Section -->
        <div class="col-md-4 mb-4">
            <div class="card ingredients-card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Ingredients</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var ingredient in Model.Ingredients)
                        {
                            <li class="list-group-item">
                                @ingredient.DisplayText
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Steps Section -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Instructions</h3>
                </div>
                <div class="card-body">
                    @foreach (var step in Model.Steps)
                    {
                        <div class="step-block mb-4">
                            <h5 class="text-primary">@step.DisplayTitle</h5>
                            <p>@step.Instruction</p>

                            @if (step.ImagePaths.Any())
                            {
                                <div class="row">
                                    @foreach (var imagePath in step.ImagePaths)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <img src="@imagePath" class="img-fluid rounded" alt="Step image">
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        @if (step != Model.Steps.Last())
                        {
                            <hr />
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">Reviews (@Model.ReviewCount)</h3>
                </div>
                <div class="card-body">
                    @if (User.Identity.IsAuthenticated && !Model.HasUserReviewed)
                    {
                        <div class="alert alert-info mb-3">
                            <a asp-controller="Reviews" asp-action="Create" asp-route-recipeId="@Model.Id" class="btn btn-primary">
                                Write a Review
                            </a>
                        </div>
                    }

                    @if (Model.Reviews.Any())
                    {
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="card review-card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h5 class="reviewer-name mb-1">@review.DisplayName</h5>
                                            <div class="mb-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi bi-star@(i <= review.Rating ? "-fill text-warning" : "")"></i>
                                                }
                                            </div>
                                        </div>
                                        <small class="review-date text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="review-body mb-2">@review.Message</p>

                                    @if (review.ImagePaths.Any())
                                    {
                                        <div class="row">
                                            @foreach (var imagePath in review.ImagePaths)
                                            {
                                                <div class="col-md-3 mb-2">
                                                    <img src="@imagePath" class="img-fluid rounded" alt="Review image">
                                                </div>
                                            }
                                        </div>
                                    }

                                    @if (review.IsCurrentUser)
                                    {
                                        <div class="mt-2">
                                            <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-warning">
                                                Edit
                                            </a>
                                            <form asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this review?')">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No reviews yet. Be the first to review this recipe!</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Recipes
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript for interactivity here (if any lol)
    </script>
}