@model Forked.Models.ViewModels.Users.UserFollowersListViewModel

<h2 class="mt-4">Followers</h2>

<div class="row mt-3">
    @foreach (var follower in Model.Items)
    {
        <div class="col-md-4 mb-3">
            @await Html.PartialAsync("_UserCard", follower)
        </div>
    }
</div>

<div class="mt-3">
    Page @Model.Paging.CurrentPage of @Model.Paging.TotalPages
</div>
