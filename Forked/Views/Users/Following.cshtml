@model Forked.Models.ViewModels.Users.UserFollowingListViewModel
@{
    ViewData["Title"] = "Following";
}
<h2 class="mt-4">Following</h2>

<div class="row mt-3">
    @foreach (var user in Model.Items)
    {
        <div class="col-md-4 mb-3">
            @await Html.PartialAsync("_UserCard", user)
        </div>
    }
</div>

<div class="mt-3">
    Page @Model.Paging.CurrentPage of @Model.Paging.TotalPages
</div>
