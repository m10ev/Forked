@model Forked.Models.ViewModels.Users.UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="container mt-4">

    <div class="d-flex align-items-center gap-4">
        <img src="@Model.ProfilePicturePath" class="rounded-circle" style="width:120px;height:120px;object-fit:cover;" />

        <div>
            <h2>@Model.DisplayName</h2>

            <div class="text-muted">
                <span><strong>@Model.FollowersCount</strong> Followers</span> •
                <span><strong>@Model.FollowingCount</strong> Following</span> •
                <span><strong>@Model.RecipeCount</strong> Recipes</span>
            </div>

            <div class="mt-2">
                <a asp-controller="Users" asp-action="Followers" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Followers</a>
                <a asp-controller="Users" asp-action="Following" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Following</a>
            </div>
        </div>
    </div>

</div>
