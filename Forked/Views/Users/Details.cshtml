@model Forked.Models.ViewModels.Users.UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">

    <!-- ================= User Profile ================= -->
    <div class="d-flex align-items-center gap-4">
        <img src="@Model.ProfilePicturePath" class="rounded-circle" style="width:120px;height:120px;object-fit:cover;" />

        <div>
            <h2>@Model.DisplayName</h2>

            <div class="text-muted">
                <span><strong>@Model.FollowersCount</strong> Followers</span> •
                <span><strong>@Model.FollowingCount</strong> Following</span> •
                <span><strong>@Model.RecipeCount</strong> Recipes</span>
            </div>

            <div class="mt-2">
                <a asp-controller="Users" asp-action="Followers" asp-route-displayName="@Model.DisplayName" class="btn btn-outline-primary btn-sm">Followers</a>
                <a asp-controller="Users" asp-action="Following" asp-route-displayName="@Model.DisplayName" class="btn btn-outline-primary btn-sm">Following</a>
            </div>

            <div class="mt-3">
                @if (!Model.IsCurrentUser)
                {
                    if (Model.IsFollowedByCurrentUser)
                    {
                        <form asp-action="Unfollow" method="post" asp-route-displayName="@Model.DisplayName">
                            <input type="hidden" name="displayName" value="@Model.DisplayName" />
                            <button type="submit" class="btn btn-danger">Unfollow</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Follow" method="post" asp-route-displayName="@Model.DisplayName">
                            <input type="hidden" name="displayName" value="@Model.DisplayName" />
                            <button type="submit" class="btn btn-primary">Follow</button>
                        </form>
                    }
                }
            </div>
        </div>
    </div>

    <!-- ================= User Recipes Section ================= -->
    <div class="mt-5">
        <h3>@Model.DisplayName's Recipes</h3>
        <div id="user-recipes-container">
            <div class="text-muted">Loading recipes...</div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        async function loadUserRecipes(page = 1) {
            const container = document.getElementById('user-recipes-container');
            const authorName = "@Model.DisplayName";

            try {
                const response = await fetch(`/Recipes/User?authorName=${encodeURIComponent(authorName)}&page=${page}`);
                if (!response.ok) throw new Error('Failed to load recipes');

                const html = await response.text();
                container.innerHTML = html;

                // Attach click events to pagination links
                container.querySelectorAll('.pagination .page-link').forEach(link => {
                    link.addEventListener('click', e => {
                        e.preventDefault();
                        const nextPage = link.getAttribute('data-page');
                        loadUserRecipes(nextPage);
                    });
                });

            } catch (err) {
                container.innerHTML = '<div class="alert alert-danger">Unable to load recipes.</div>';
                console.error(err);
            }
        }

        // Initial load
        loadUserRecipes();
    </script>
}
