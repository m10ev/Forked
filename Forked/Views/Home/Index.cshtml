@using Microsoft.AspNetCore.Identity
@inject SignInManager<Forked.Models.Domains.User> SignInManager

@{
    ViewData["Title"] = "Home";
}

<div class="hero">
    <div class="hero__bg"></div>
    <div class="hero__content">
        <div class="hero__eyebrow">
            <span>🍴</span> The recipe community
        </div>
        <h1 class="hero__title">
            Cook it.<br />
            <span class="hero__title--accent">Fork it.</span><br />
            Make it yours.
        </h1>
        <p class="hero__subtitle">
            Discover recipes, put your own spin on them, and share your creations
            with a community of food lovers. Every great dish starts with someone else's idea.
        </p>
        <div class="hero__actions">
            <a asp-controller="Account" asp-action="Register" asp-area="Identity" class="hero__btn-primary">
                Get started — it's free
            </a>
            <a asp-controller="Recipes" asp-action="Index" class="hero__btn-ghost">
                Browse recipes →
            </a>
        </div>
    </div>

    <div class="hero__cards">
        <div class="hero__card hero__card--1">
            <div class="hero__card-img" style="background-image:url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?w=400&q=80')"></div>
            <div class="hero__card-body">
                <span class="hero__card-tag">Forked ×3</span>
                <p class="hero__card-title">Lemon Ricotta Pasta</p>
                <span class="hero__card-meta">⏱ 20 min · ⭐ 4.8</span>
            </div>
        </div>
        <div class="hero__card hero__card--2">
            <div class="hero__card-img" style="background-image:url('https://images.unsplash.com/photo-1555939594-58d7cb561ad1?w=400&q=80')"></div>
            <div class="hero__card-body">
                <span class="hero__card-tag">Original</span>
                <p class="hero__card-title">Smoky Pulled Chicken</p>
                <span class="hero__card-meta">⏱ 45 min · ⭐ 4.9</span>
            </div>
        </div>
        <div class="hero__card hero__card--3">
            <div class="hero__card-img" style="background-image:url('https://images.unsplash.com/photo-1565299624946-b28f40a0ae38?w=400&q=80')"></div>
            <div class="hero__card-body">
                <span class="hero__card-tag">Forked ×1</span>
                <p class="hero__card-title">Neapolitan Pizza</p>
                <span class="hero__card-meta">⏱ 90 min · ⭐ 5.0</span>
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<div class="features">
    <div class="feature">
        <div class="feature__icon">📖</div>
        <h3 class="feature__title">Discover</h3>
        <p class="feature__text">Browse hundreds of community recipes across every cuisine and skill level.</p>
    </div>
    <div class="feature">
        <div class="feature__icon">🍴</div>
        <h3 class="feature__title">Fork</h3>
        <p class="feature__text">Found a recipe you love? Fork it, tweak it, and publish your own version.</p>
    </div>
    <div class="feature">
        <div class="feature__icon">⭐</div>
        <h3 class="feature__title">Review</h3>
        <p class="feature__text">Rate recipes, leave tips, and help others find their next favourite meal.</p>
    </div>
</div>

@section Scripts {
    <script>
        const sortSelect = document.getElementById('sortBySelect');
        if (sortSelect) {
            sortSelect.addEventListener('change', () => sortSelect.closest('form').submit());
        }
    </script>
}

<style>
    /* =======================================
       HERO — logged out
    ======================================= */
    .hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 4rem 0 3rem;
        position: relative;
        overflow: hidden;
    }

    .hero__bg {
        position: absolute;
        inset: 0;
        background: radial-gradient(ellipse 60% 80% at 85% 50%, rgba(232,90,42,0.07) 0%, transparent 70%), radial-gradient(ellipse 40% 60% at 15% 80%, rgba(245,200,66,0.06) 0%, transparent 70%);
        pointer-events: none;
    }

    .hero__content {
        position: relative;
        z-index: 1;
        animation: fadeUp 500ms ease-out both;
    }

    .hero__eyebrow {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        background: rgba(232,90,42,0.1);
        color: #e85a2a;
        font-size: 0.82rem;
        font-weight: 600;
        padding: 0.3rem 0.85rem;
        border-radius: 100px;
        margin-bottom: 1.5rem;
        letter-spacing: 0.04em;
        text-transform: uppercase;
    }

    .hero__title {
        font-size: clamp(2.6rem, 5vw, 4.2rem);
        font-weight: 900;
        line-height: 1.08;
        color: #1e1e1e;
        margin-bottom: 1.5rem;
        letter-spacing: -0.03em;
    }

    .hero__title--accent {
        color: #e85a2a;
        position: relative;
        display: inline-block;
    }

        .hero__title--accent::after {
            content: '';
            position: absolute;
            bottom: 2px;
            left: 0;
            right: 0;
            height: 5px;
            background: #f5c842;
            border-radius: 3px;
            opacity: 0.65;
        }

    .hero__subtitle {
        font-size: 1.1rem;
        color: #5a5a5a;
        line-height: 1.75;
        max-width: 460px;
        margin-bottom: 2.5rem;
    }

    .hero__actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .hero__btn-primary {
        background: #e85a2a;
        color: #fff;
        border: none;
        padding: 0.85rem 2rem;
        border-radius: 0.5rem;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 200ms ease;
        box-shadow: 0 4px 18px rgba(232,90,42,0.28);
        text-decoration: none;
        display: inline-block;
    }

        .hero__btn-primary:hover {
            background: #c44a1e;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 6px 24px rgba(232,90,42,0.38);
            text-decoration: none;
        }

    .hero__btn-ghost {
        color: #e85a2a;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: color 200ms ease;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

        .hero__btn-ghost:hover {
            color: #c44a1e;
            text-decoration: none;
        }

    /* Hero preview cards */
    .hero__cards {
        position: relative;
        height: 480px;
        animation: fadeUp 600ms 150ms ease-out both;
    }

    .hero__card {
        position: absolute;
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.12);
        overflow: hidden;
        width: 200px;
        transition: transform 300ms ease, box-shadow 300ms ease;
    }

        .hero__card:hover {
            transform: translateY(-6px) !important;
            box-shadow: 0 16px 40px rgba(0,0,0,0.18);
        }

    .hero__card--1 {
        top: 0;
        left: 10%;
        transform: rotate(-3deg);
        z-index: 3;
    }

    .hero__card--2 {
        top: 60px;
        left: 38%;
        transform: rotate(2deg);
        z-index: 2;
    }

    .hero__card--3 {
        top: 140px;
        left: 20%;
        transform: rotate(-1deg);
        z-index: 1;
    }

    .hero__card-img {
        height: 120px;
        background-size: cover;
        background-position: center;
    }

    .hero__card-body {
        padding: 0.75rem;
    }

    .hero__card-tag {
        display: inline-block;
        background: rgba(232,90,42,0.12);
        color: #e85a2a;
        font-size: 0.7rem;
        font-weight: 700;
        padding: 0.15rem 0.5rem;
        border-radius: 100px;
        margin-bottom: 0.35rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    .hero__card-title {
        font-size: 0.875rem;
        font-weight: 700;
        color: #1e1e1e;
        margin: 0 0 0.25rem;
    }

    .hero__card-meta {
        font-size: 0.75rem;
        color: #7a7a7a;
    }

    /* =======================================
       FEATURES STRIP
    ======================================= */
    .features {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        padding: 3rem 0 4rem;
        border-top: 1px solid #e0dbd5;
        margin-top: 2rem;
    }

    .feature {
        text-align: center;
        padding: 1.5rem;
    }

    .feature__icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        display: block;
    }

    .feature__title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1e1e1e;
        margin-bottom: 0.5rem;
    }

    .feature__text {
        font-size: 0.9rem;
        color: #5a5a5a;
        line-height: 1.65;
        margin: 0;
    }

    /* =======================================
       SEARCH HOME — logged in
    ======================================= */
    .search-home__header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .search-home__title {
        font-size: 1.75rem;
        font-weight: 800;
        color: #1e1e1e;
        margin-bottom: 0.25rem;
    }

    .search-home__sub {
        color: #7a7a7a;
        font-size: 0.95rem;
        margin: 0;
    }

    .search-bar__icon {
        background: #faf8f5;
        border-right: none;
        color: #7a7a7a;
    }

    .search-bar__input {
        border-left: none;
    }

        .search-bar__input:focus {
            border-left: none;
            box-shadow: none;
            border-color: #e0dbd5;
        }

    .search-bar .input-group:focus-within {
        box-shadow: 0 0 0 3px rgba(232,90,42,0.18);
        border-radius: 0.5rem;
    }

    /* Filter chips */
    .filter-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        align-items: flex-end;
        background: #f4f0eb;
        border-radius: 0.75rem;
        padding: 1rem 1.25rem;
    }

    .filter-chip {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }

    .filter-chip__label {
        font-size: 0.72rem;
        font-weight: 700;
        color: #7a7a7a;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin: 0;
    }

    .filter-chip__input {
        min-width: 110px;
        font-size: 0.875rem;
        padding: 0.4rem 0.65rem;
        height: auto;
    }

    .filter-chip--toggles {
        flex: 1;
        min-width: 200px;
    }

    .filter-toggles {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .filter-toggle {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        background: #fff;
        border: 1.5px solid #e0dbd5;
        border-radius: 100px;
        padding: 0.3rem 0.75rem;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 200ms ease;
        user-select: none;
        white-space: nowrap;
    }

        .filter-toggle:hover {
            border-color: #e85a2a;
            background: rgba(232,90,42,0.05);
        }

        .filter-toggle input[type="checkbox"] {
            display: none;
        }

        .filter-toggle:has(input:checked) {
            background: #e85a2a;
            border-color: #e85a2a;
            color: #fff;
        }

    /* Quick links */
    .quick-links {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .quick-links__label {
        font-size: 0.8rem;
        color: #7a7a7a;
        font-weight: 600;
    }

    .quick-link {
        font-size: 0.8rem;
        font-weight: 600;
        color: #e85a2a;
        background: rgba(232,90,42,0.08);
        padding: 0.25rem 0.75rem;
        border-radius: 100px;
        text-decoration: none;
        transition: all 200ms ease;
        border: 1px solid transparent;
    }

        .quick-link:hover {
            background: #e85a2a;
            color: #fff;
            text-decoration: none;
            border-color: #e85a2a;
        }

    /* =======================================
       RESPONSIVE
    ======================================= */
    @@media (max-width: 768px) {
        .hero {
            grid-template-columns: 1fr;
            min-height: auto;
            padding: 2.5rem 0;
            gap: 2rem;
        }

        .hero__cards {
            height: 300px;
        }

        .hero__card {
            width: 160px;
        }

        .hero__card-img {
            height: 90px;
        }

        .hero__card--1 {
            left: 0;
            top: 0;
        }

        .hero__card--2 {
            left: 30%;
            top: 40px;
        }

        .hero__card--3 {
            left: 15%;
            top: 110px;
        }

        .features {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .search-home__header {
            flex-direction: column;
        }

        .filter-row {
            flex-direction: column;
        }

        .filter-chip__input {
            width: 100%;
        }
    }
</style>
